{
  "name": "elliephp/support",
  "description": "Support utilities for ElliePHP (cache, strings, helpers, etc.)",
  "type": "library",
  "keywords": [
    "elliephp",
    "support",
    "helpers",
    "logs",
    "cache",
    "env"
  ],
  "homepage": "https://github.com/elliephp/support",
  "license": "MIT",
  "authors": [
    {
      "name": "Joey Boli",
      "email": "bankuboy@proton.me"
    }
  ],
  "support": {
    "issues": "https://github.com/elliephp/support/issues",
    "source": "https://github.com/elliephp/support"
  },
  "require": {
    "php": "^8.4",
    "ext-ctype": "*",
    "ext-fileinfo": "*",
    "ext-mbstring": "*",
    "ext-simplexml": "*",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1",
    "psr/log": "^3.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "ElliePHP\\Components\\Support\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ElliePHP\\Components\\Support\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}

{
  "name": "elliephp/cache",
  "description": "Ellie PHP Simple Cache Component",
  "type": "library",
  "keywords": [
    "elliephp",
    "cache"
  ],
  "homepage": "https://github.com/elliephp/cache",
  "license": "MIT",
  "authors": [
    {
      "name": "Joey Boli",
      "email": "bankuboy@proton.me"
    }
  ],
  "support": {
    "issues": "https://github.com/elliephp/cache/issues",
    "source": "https://github.com/elliephp/cache"
  },
  "require": {
    "php": "^8.4",
    "elliephp/support": "^1.0",
    "predis/predis": "^3.2",
    "psr/simple-cache": "^3.0",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "ElliePHP\\Components\\Cache\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ElliePHP\\Components\\Cache\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}

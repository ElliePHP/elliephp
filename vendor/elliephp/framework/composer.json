{
  "name": "elliephp/framework",
  "description": "A fast, modular PHP microframework focused on clean architecture, performance, and zero-bloat components.",
  "type": "library",
  "keywords": [
    "php",
    "framework",
    "microframework",
    "elliephp",
    "http",
    "routing",
    "cache",
    "middleware"
  ],
  "homepage": "https://github.com/elliephp/framework",
  "license": "MIT",
  "authors": [
    {
      "name": "Joey Boli",
      "email": "bankuboy@proton.me"
    }
  ],
  "support": {
    "issues": "https://github.com/elliephp/framework/issues",
    "source": "https://github.com/elliephp/framework"
  },
  "require": {
    "php": "^8.4",
    "ext-pdo": "*",
    "elliephp/cache": "^1.0",
    "elliephp/console": "^1.0",
    "elliephp/routing": "^1.0",
    "elliephp/support": "^1.0",
    "fig/http-message-util": "^1.1",
    "laminas/laminas-diactoros": "^3.8",
    "laminas/laminas-httphandlerrunner": "^2.13",
    "monolog/monolog": "^3.9",
    "php-di/php-di": "^7.1",
    "symfony/process": "^7.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "rector/rector": "^2.2",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^7.3"
  },
  "autoload": {
    "psr-4": {
      "ElliePHP\\Framework\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ElliePHP\\Components\\Framework\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
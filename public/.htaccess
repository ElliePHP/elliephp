# Enable mod_rewrite
RewriteEngine On

# Force HTTPS (comment out if not using SSL in development)
# RewriteCond %{HTTPS} off
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Block access to sensitive files and directories
<FilesMatch "^(\.env|\.git.*|composer\.(json|lock)|package(-lock)?\.json|phpunit\.xml)$">
    Require all denied
</FilesMatch>

# Disable directory browsing
Options -Indexes

# Prevent access to hidden files (starting with .)
RedirectMatch 404 /\..*$

# Route all requests to index.php (except existing files/directories)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]